<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background">

    <TextView
        android:id="@+id/tv_submit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="提交成功"
        android:textColor="@color/color_333333"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_submit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16.5dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text="已经把你的作业发送给老师，老师评选的优质作业将有机会被公开展示"
        android:textColor="@color/color_333333"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_submit_title" />

    <ImageView
        android:id="@+id/iv_push_tip"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="11.5dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:src="@drawable/chose_multiple"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_submit_content" />

    <TextView
        android:id="@+id/tv_push_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="老师点评作业后，会在消息中推送告知"
        android:textColor="@color/color999999"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_push_tip"
        app:layout_constraintStart_toEndOf="@+id/iv_push_tip"
        app:layout_constraintTop_toTopOf="@+id/iv_push_tip" />

    <View
        android:id="@+id/tv_submit_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="13dp"
        android:background="@color/color_E5E5E5"
        app:layout_constraintTop_toBottomOf="@+id/tv_push_tip" />

    <TextView
        android:id="@+id/tv_submit_sure"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/quit_sure"
        android:textColor="@color/color_1677FF"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_submit_line" />
</androidx.constraintlayout.widget.ConstraintLayout>