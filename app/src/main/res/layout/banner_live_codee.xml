<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bannerContainer"
    android:layout_width="match_parent"
    android:layout_height="428dp"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="@dimen/dimen_40"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/bannerDefaultImage"
        android:layout_width="match_parent"
        android:layout_height="428dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        tools:src="@drawable/ic_my_points_bg" />

    <TextView
        android:id="@+id/tv_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        tools:text="翟山鹰:数字经济时代企业最应该做的事儿！" />

    <ImageView
        android:id="@+id/wb_qr_code"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35.7dp"
        android:background="@drawable/bg_ffffff_corners_3"
        android:padding="2dp"
        tools:src="@drawable/ic_about" />
</RelativeLayout>