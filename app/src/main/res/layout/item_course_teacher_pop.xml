<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_teacher_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="全部"
        android:textColor="@drawable/selector_course_teacher_pop_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_arrow_item"
        android:layout_width="8dp"
        android:layout_height="5.5dp"
        android:layout_marginEnd="14.5dp"
        android:src="@drawable/course_pop_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/tv_teacher_name_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_teacher_name_item" />

    <View
        android:id="@+id/line_pop_item"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="7.5dp"
        android:background="@color/colorEEEEEE"
        app:layout_constraintTop_toBottomOf="@+id/tv_teacher_name_item" />
</androidx.constraintlayout.widget.ConstraintLayout>