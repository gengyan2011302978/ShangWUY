<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_no_network_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:padding="10dp"
        android:src="@drawable/ic_btn_back"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_no_network"
        android:layout_width="86dp"
        android:layout_height="65dp"
        android:layout_marginTop="169dp"
        android:src="@drawable/no_network"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_no_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="网络开小差了，刷新试试看"
        android:textColor="@color/color_999999"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_no_network"
        app:layout_constraintStart_toStartOf="@+id/iv_no_network"
        app:layout_constraintTop_toBottomOf="@+id/iv_no_network" />

    <com.phjt.view.roundView.RoundTextView
        android:id="@+id/tv_refresh"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="刷新"
        android:textColor="@color/color_2472FF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_no_network"
        app:layout_constraintStart_toStartOf="@+id/tv_no_network"
        app:layout_constraintTop_toBottomOf="@+id/tv_no_network"
        app:rv_cornerRadius="6dp"
        app:rv_strokeColor="@color/color_2472FF"
        app:rv_strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>