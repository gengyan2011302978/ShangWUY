<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_15"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/tv_get_points_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="课程评论"
        android:maxLines="1"
        android:enabled="true"
        android:layout_marginEnd="90dp"
        android:textColor="@color/color_FF333333"
        android:textSize="15sp"
        android:layout_marginStart="14.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_get_points_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="每次可获5积分"
        android:layout_marginTop="9dp"
        android:maxLines="1"
        android:enabled="true"
        android:layout_marginEnd="90dp"
        android:textColor="@color/color_FF999999"
        android:textSize="12sp"
        android:layout_marginStart="14.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_get_points_title"/>


    <TextView
        android:id="@+id/tv_points_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="+1000"
        android:layout_marginEnd="@dimen/dp_15"
        android:textColor="@color/color_FFFAAD14"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_points_bg"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="16.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/view_label"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/color_F2F2F2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_get_points_data"/>

</androidx.constraintlayout.widget.ConstraintLayout>