<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="123dp"
    android:id="@+id/relat_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.phjt.view.roundImg.RoundedImageView
        android:id="@+id/iv_logo"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:src="@drawable/passageway_icon"
        app:riv_corner_radius="4dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="135dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="22dp"
        android:layout_height="12dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:background="@drawable/roof_placement_icon"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普华商学111111111院基金123从业资训练…"
            android:lines="1"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#ff333333"
            android:textSize="16sp"
            />
    </LinearLayout>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3天掌握10大考点，您轻松果果考试…"
            android:textColor="#ff999999"
            android:textSize="14sp"
            android:lines="1"
            android:layout_marginTop="5.5dp"
            android:singleLine="true"
            android:ellipsize="end"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="135dp"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_articleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_f7f7f7_rectangle"
            android:text="精选文章"
            android:padding="3.5dp"
            android:textColor="#854306"
            android:textSize="11sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_classifyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基金从业"
            android:padding="3.5dp"
            android:layout_marginStart="4dp"
            android:layout_toRightOf="@+id/tv_articleLabel"
            android:background="@drawable/bg_f7f7f7_rectangle"
            android:textColor="@color/color_666666"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="263人在看"
            android:drawablePadding="2.5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="75dp"
            android:textColor="#ffb4b4b4"
            android:textSize="11sp"
            />
    </RelativeLayout>
</RelativeLayout>