<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@drawable/dialog_white_bg">

    <com.phjt.view.roundImg.RoundedImageView
        android:id="@+id/iv_head_pic"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="13.5dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true"
        app:src="@drawable/iv_mine_avatar"
        app:srcCompat="@drawable/iv_mine_avatar" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/dimen_23"
        android:enabled="true"
        android:maxLines="1"
        android:textColor="@color/color_FF333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_head_pic"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="昵称XXXX" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/dimen_23"
        android:layout_marginEnd="16dp"
        android:enabled="true"
        android:maxLines="1"
        android:textColor="@color/color_FF999999"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2021/08/20" />


    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13.5dp"
        android:layout_marginTop="@dimen/dimen_12"
        android:text="手机号："
        android:textColor="@color/color_FF696868"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_head_pic" />

    <TextView
        android:id="@+id/tv_phone_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginEnd="16dp"
        android:enabled="true"
        android:maxLines="1"
        android:textColor="@color/color_FF696868"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_head_pic"
        tools:text="132****8036" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13.5dp"
        android:layout_marginTop="@dimen/dimen_12"
        android:text="消费金额："
        android:textColor="@color/color_FF696868"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_num" />

    <TextView
        android:id="@+id/tv_amount_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginEnd="16dp"
        android:enabled="true"
        android:maxLines="1"
        android:textColor="@color/color_FF696868"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_num"
        tools:text="10088学豆" />
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_amount"/>
</androidx.constraintlayout.widget.ConstraintLayout>