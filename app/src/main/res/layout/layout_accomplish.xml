<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/dp_44"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_accomplish"
        android:layout_width="@dimen/dp_76"
        android:layout_height="@dimen/dp_76"
        android:layout_marginTop="@dimen/dp_47"
        android:src="@drawable/ic_accomplish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="@dimen/dp_16"
        android:gravity="center_horizontal"
        android:textColor="@color/color_FF666666"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_accomplish"
        tools:text="您已成功提交身份认证，工作人员会在3个工作日内进行审核" />


    <TextView
        android:id="@+id/tv_back_to_homepage"
        android:layout_width="@dimen/dp_240"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_id_card"
        android:gravity="center"
        android:text="返回"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_explain" />

</androidx.constraintlayout.widget.ConstraintLayout>