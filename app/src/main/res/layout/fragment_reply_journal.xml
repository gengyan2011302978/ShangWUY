<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leave_message_radiobutton_background">

    <ImageView
        android:id="@+id/iv_back_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="@dimen/dp_17"
        android:layout_marginTop="12dp"
        android:padding="5dp"
        android:src="@drawable/close_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_publish"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/dp_7"
        android:background="@drawable/bg_publish_un"
        android:gravity="center"
        android:text="发表"
        android:textColor="@color/color_666666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fl_edit_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@color/color_F5F5F5"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_publish">

        <EditText
            android:id="@+id/edit_reply_journal"
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="30dp"
            android:background="@null"
            android:fadeScrollbars="false"
            android:gravity="top|start"
            android:hint="@string/hint_reply_journal"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:scrollbars="vertical"
            android:textColor="@color/color_666666"
            android:textColorHint="#ffb8b8b8"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_input_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="15dp"
            android:text="0/5000"
            android:textColor="@color/color_999999"
            android:textSize="13sp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
