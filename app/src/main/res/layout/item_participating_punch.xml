<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white">

    <com.phjt.view.roundImg.RoundedImageView
        android:id="@+id/iv_participating_punch"
        android:layout_width="105dp"
        android:layout_height="77dp"
        android:layout_marginStart="12.5dp"
        android:layout_marginTop="12.5dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="4dp"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_audition_title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginEnd="14dp"
        android:layout_toEndOf="@+id/iv_participating_punch"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        tools:text="数字化经济训练营" />

    <TextView
        android:id="@+id/tv_number_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_audition_title_item"
        android:layout_marginStart="14dp"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/iv_participating_punch"
        android:textColor="@color/color_979797"
        android:textSize="12sp"
        android:text="打卡" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_audition_title_item"
        android:layout_marginStart="1dp"
        android:layout_marginTop="36dp"
        android:visibility="gone"
        android:layout_toEndOf="@+id/tv_number_times"
        android:textColor="@color/color_333333"
        android:textSize="12sp"
        tools:text="2次" />


    <TextView
        android:id="@+id/tv_number_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_audition_title_item"
        android:layout_marginStart="1dp"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/tv_number"
        android:textColor="@color/color_979797"
        android:textSize="12sp"
        android:visibility="gone"
        android:text="/已进行" />



    <TextView
        android:id="@+id/tv_study_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_audition_title_item"
        android:layout_marginStart="1dp"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/tv_number_data"
        android:textColor="@color/color_333333"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="15天" />

    <com.phjt.view.roundView.RoundTextView
        android:id="@+id/tv_punch_clock"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_below="@+id/tv_audition_title_item"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="14dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="visible"
        app:rv_backgroundColor="@color/color_4071FC"
        app:rv_cornerRadius="2dp"
        tools:text="打卡"
        tools:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_participating_punch"
        android:layout_marginTop="12.5dp"
        android:background="@color/color_FAF7F8" />

</RelativeLayout>