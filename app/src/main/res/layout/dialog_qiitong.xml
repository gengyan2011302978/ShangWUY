<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="284dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background">

    <TextView
        android:id="@+id/tv_submit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="温馨提示"
        android:textColor="@color/color_FF333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_submit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.5dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16.5dp"
        android:gravity="left"
        android:lineSpacingExtra="2dp"
        android:text="@string/mine_explain"
        android:textColor="@color/color_333333"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_submit_title" />

    <ImageView
        android:id="@+id/iv_push_tip"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="11.5dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:src="@drawable/coupon_qiitong_select"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_submit_content" />

    <TextView
        android:id="@+id/tv_push_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="一个月内不再提示"
        android:textColor="@color/color999999"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/iv_push_tip"
        app:layout_constraintTop_toTopOf="@+id/iv_push_tip" />

    <View
        android:id="@+id/tv_pu"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="13dp"
        android:background="@color/color_E5E5E5"
        app:layout_constraintTop_toBottomOf="@+id/tv_push_tip" />

    <TextView
        android:id="@+id/tv_submit_backing_out"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/dp_35"
        android:gravity="center"
        android:text="我在想想"
        android:textColor="@color/color_FF999999"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pu" />

    <View
        android:id="@+id/tv_submit_line"
        android:layout_width="0.5dp"
        android:layout_height="48dp"
        android:background="@color/color_E5E5E5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pu" />

    <TextView
        android:id="@+id/tv_submit_sure"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/dp_35"
        android:gravity="center"
        android:text="确定前往"
        android:textColor="@color/color_FFFF670D"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pu" />
</androidx.constraintlayout.widget.ConstraintLayout>