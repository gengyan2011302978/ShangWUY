<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_header"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16">

        <TextView
            android:id="@+id/tv_boc_course_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="@dimen/dp_17"
            android:paddingStart="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_3"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            tools:background="@drawable/shape_bg_access_learning"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="@string/boc_elementary" />

        <TextView
            android:id="@+id/tv_boc_course_classify_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="17.8dp"
            android:layout_marginEnd="19dp"
            android:maxLines="4"
            android:lineSpacingExtra="6dp"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="@string/boc_elementary_content" />
    </FrameLayout>
</FrameLayout>