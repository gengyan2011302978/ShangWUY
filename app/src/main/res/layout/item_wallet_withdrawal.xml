<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_withdrawal_amount_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="¥258.25" />


    <ImageView
        android:id="@+id/iv_withdrawal_arrow_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:src="@drawable/iv_mine_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/tv_withdrawal_amount_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_withdrawal_amount_item" />

    <TextView
        android:id="@+id/tv_withdrawal_state_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textColor="@color/color_666666"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_withdrawal_arrow_item"
        app:layout_constraintEnd_toStartOf="@+id/iv_withdrawal_arrow_item"
        app:layout_constraintTop_toTopOf="@+id/iv_withdrawal_arrow_item"
        tools:text="受理中" />

    <TextView
        android:id="@+id/tv_withdrawal_date_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_withdrawal_state_item"
        app:layout_constraintEnd_toStartOf="@+id/tv_withdrawal_state_item"
        app:layout_constraintTop_toTopOf="@+id/tv_withdrawal_state_item"
        tools:text="2020-05-18 15:22" />

</androidx.constraintlayout.widget.ConstraintLayout>