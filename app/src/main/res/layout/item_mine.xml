<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_mine_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_wealth_wjj" />

    <TextView
        android:id="@+id/tv_item_mine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.5dp"
        android:textColor="@color/color_FF666666"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_mine_icon"
        app:layout_constraintStart_toStartOf="@+id/iv_item_mine_icon"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_mine_icon"
        tools:text="基本信息" />
</androidx.constraintlayout.widget.ConstraintLayout>