<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relat_item"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_marginLeft="15.5dp"
    android:layout_height="77dp">

    <CheckBox
        android:id="@+id/cb_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/checkbox_selector"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginRight="15dp"
        />
    <RelativeLayout
        android:id="@+id/relat_icon"
        android:layout_width="105dp"
        android:layout_height="77dp"
        android:scaleType="fitXY"
        android:layout_toRightOf="@+id/cb_click">
    <com.phjt.view.roundImg.RoundedImageView
        android:id="@+id/ri_icon"
        android:layout_width="105dp"
        android:layout_height="77dp"
        app:riv_corner_radius="4dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher"></com.phjt.view.roundImg.RoundedImageView>
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_000000_rectangle"
            android:text="4个视频"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:gravity="end"
            android:paddingRight="3dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="基金从业金从业基金从业金从业基金从业金从业基金从业金从业基金从业金从业基金从业金从业 必考点训练…"
        android:ellipsize="end"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/relat_icon"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="16dp"
        />
    <TextView
        android:id="@+id/tv_desc"
        android:layout_below="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="莎士比亚”系统集团搬家系统集团系统集团搬家系统集团系统集团搬家系统集团…"
        android:textColor="#ff666666"
        android:layout_toRightOf="@+id/relat_icon"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="16dp"
        android:singleLine="true"
        android:textSize="14sp"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.6G"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:textColor="#ff979797"
        android:layout_toRightOf="@+id/relat_icon"
        android:layout_marginLeft="14dp"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_downloading"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="正在下载：0"
        android:textColor="#ff979797"
        android:textSize="14sp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/relat_icon"
        android:layout_marginLeft="14dp"
        />
</RelativeLayout>