<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/exercise_cd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white"
        android:visibility="gone"
        app:cardCornerRadius="3dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_exercise_clock"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_exercise_clock"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_exercise_clock_item"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_exercise_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/exercise_the_clock"
                android:textColor="@color/color_333333"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_exercise_clock"
                app:layout_constraintStart_toEndOf="@+id/iv_exercise_clock"
                app:layout_constraintTop_toTopOf="@+id/iv_exercise_clock" />

            <TextView
                android:id="@+id/tv_exercise_clock_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:textColor="@color/color_666666"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_exercise_clock"
                app:layout_constraintEnd_toStartOf="@+id/iv_exercise_clock_arrow"
                app:layout_constraintTop_toTopOf="@+id/iv_exercise_clock"
                tools:text="关联3个打卡" />

            <ImageView
                android:id="@+id/iv_exercise_clock_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_right_arrow"
                app:layout_constraintBottom_toBottomOf="@+id/iv_exercise_clock"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_exercise_clock" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/punch_cd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="15dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_punch_clock"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_punch_clock"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_punch_clock_item"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_punch_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/punch_the_clock"
                android:textColor="@color/color_333333"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_punch_clock"
                app:layout_constraintStart_toEndOf="@+id/iv_punch_clock"
                app:layout_constraintTop_toTopOf="@+id/iv_punch_clock" />

            <TextView
                android:id="@+id/tv_punch_clock_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:textColor="@color/color_666666"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_punch_clock"
                app:layout_constraintEnd_toStartOf="@+id/iv_punch_clock_arrow"
                app:layout_constraintTop_toTopOf="@+id/iv_punch_clock"
                tools:text="关联3个打卡" />

            <ImageView
                android:id="@+id/iv_punch_clock_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_right_arrow"
                app:layout_constraintBottom_toBottomOf="@+id/iv_punch_clock"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_punch_clock" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>