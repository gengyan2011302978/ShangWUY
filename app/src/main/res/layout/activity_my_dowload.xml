<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stl_study"
        android:layout_width="120dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_height="42dp"
        app:tl_indicator_color="@color/color_2673FE"
        app:tl_indicator_corner_radius="1dp"
        app:tl_indicator_height="3dp"
        app:tl_indicator_width="22.5dp"
        app:tl_indicator_width_equal_title="true"
        android:layout_centerInParent="true"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/color_2673FE"
        app:tl_textSelectsize="18sp"
        app:tl_textUnselectColor="@color/color_999999"
        app:tl_textsize="16sp" />
        <ImageView
            android:id="@+id/image_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:background="@drawable/btn_back"/>
        <TextView
            android:id="@+id/image_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#4C7CFB"
            android:textSize="16sp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_edit_icon"/>
    </RelativeLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_study"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>