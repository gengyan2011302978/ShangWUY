<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/ic_payfail" />

    <TextView
        android:id="@+id/dialog_order_payfail_tvtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_order_payfail_tvcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginBottom="@dimen/dp_26"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_11"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_11" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_order_payfail_btncancel"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_31"
            android:background="@drawable/shape_round_rect_gray_bg"
            android:gravity="center"
            android:text="@string/order_exitpay_cancelStr"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:id="@+id/dialog_order_payfail_btnok"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="50dp"
            android:background="@drawable/btn_shadow_blue_bg"
            android:gravity="center"
            android:text="@string/order_exitpay_repayStr"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>
</LinearLayout>