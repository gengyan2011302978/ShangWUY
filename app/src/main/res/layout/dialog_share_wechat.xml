<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F5F5F5">

    <ImageView
        android:id="@+id/iv_wechat_friend"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="26.5dp"
        android:src="@drawable/wechat_friend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_wechat_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="微信好友"
        android:textColor="@color/color_888888"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_wechat_friend"
        app:layout_constraintStart_toStartOf="@+id/iv_wechat_friend"
        app:layout_constraintTop_toBottomOf="@+id/iv_wechat_friend" />

    <ImageView
        android:id="@+id/iv_wechat_circle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="88dp"
        android:src="@drawable/wechat_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_wechat_friend" />

    <TextView
        android:id="@+id/tv_wechat_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="朋友圈"
        android:textColor="@color/color_888888"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_wechat_circle"
        app:layout_constraintStart_toStartOf="@+id/iv_wechat_circle"
        app:layout_constraintTop_toBottomOf="@+id/iv_wechat_circle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="17dp"
        android:background="@color/colorDDDDDD"
        app:layout_constraintTop_toBottomOf="@+id/tv_wechat_circle" />

    <com.phjt.view.roundView.RoundTextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_wechat_circle"
        app:rv_backgroundColor="@color/colorFFFFFF" />
</androidx.constraintlayout.widget.ConstraintLayout>