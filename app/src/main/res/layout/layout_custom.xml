<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_new_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_notice"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:id="@+id/iv_notice"
            android:layout_width="63dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:textColor="#FF9A65"
            android:textSize="14sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="0.5dp"
            android:layout_height="9dp"
            android:layout_marginEnd="4dp"
            android:layout_toRightOf="@+id/iv_notice"
            android:layout_centerVertical="true"
            android:background="@color/color_C6C6C6"/>
        <TextView
            android:id="@+id/tv_new_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_toRightOf="@+id/iv_line"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginRight="84dp"
            android:textColor="@color/color_666666"
            android:textSize="14sp"
            tools:text="战国时期的秦国，已经处于一个野心勃勃的时" />
        <TextView
            android:id="@+id/tv_gotobuy"
            android:layout_width="68dp"
            android:layout_height="20.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_ffa83e_rectangle"
            android:gravity="center"
            android:text="点击购买"
            android:textColor="#FFD79E83"
            android:textSize="12sp" />
    </RelativeLayout>


</FrameLayout>