<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <EditText
        android:id="@+id/et_post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_75"
        android:layout_marginBottom="@dimen/dp_6"
        android:background="@drawable/post_content_bg"
        android:ellipsize="end"
        android:gravity="left|center"
        android:hint="请输入您的回复"
        android:inputType="textMultiLine"
        android:maxHeight="@dimen/dp_100"
        android:maxLength="1000"
        android:minHeight="@dimen/dp_45"
        android:minLines="1"
        android:paddingLeft="@dimen/dp_15"
        android:textColor="@color/color_666666"
        android:textColorHint="@color/color_999999"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_send_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5.5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="发表"
        android:textColor="@color/color_DADADA"
        android:textSize="13sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_post_content" />

</androidx.constraintlayout.widget.ConstraintLayout>