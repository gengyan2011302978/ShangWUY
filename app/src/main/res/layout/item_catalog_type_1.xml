<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_cl_catalog_1"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="罗马是西方想象力的天花板？"
        android:textColor="#ff313131"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_catalog_video_item"
        />

    <TextView
        android:id="@+id/tv_catalog_video_item"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/catalog_video"
        android:gravity="center"
        android:layout_below="@+id/course_title" />

    <TextView
        android:id="@+id/tv_catalog_title_1_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/tv_catalog_video_item"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/course_title"
        android:textColor="@drawable/selector_course_item_color"
        android:textSize="14sp"
        tools:text="可打开深刻的今飞凯达交付时代时代峰可打开深刻的今飞凯达交付时代时代峰" />

    <ImageView
        android:id="@+id/iv_catalog_1_item"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="17dp"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:src="@drawable/selector_course_item_arrow"
        android:layout_below="@+id/course_title"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_catalog_title_1_item"
        android:background="@color/color_E3E3E3"/>
</RelativeLayout>