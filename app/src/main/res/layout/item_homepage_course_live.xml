<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.phjt.view.roundImg.RoundedImageView
            android:id="@+id/iv_audition_item"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="4dp"
            tools:src="@mipmap/ic_launcher" />

        <com.phjt.view.roundImg.RoundedImageView
            android:id="@+id/iv_logo"
            android:layout_width="141dp"
            android:layout_height="105dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="4dp"
            tools:src="@drawable/passageway_icon" />

        <LinearLayout
            android:id="@+id/linear_living"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/bg_f650c_rectangle"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp">

            <ImageView
                android:id="@+id/iv_undulate"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/audition_animation" />

            <TextView
                android:id="@+id/tv_living"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.5dp"
                android:text="直播中"
                android:textColor="#ffffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/bg_f650c_rectangle"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"
            android:text="直播中"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:text="1111"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/relat_couse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_course_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="11dp"
                android:background="@drawable/bg_f7f7f7_rectangle"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="3dp"
                android:paddingRight="8dp"
                android:paddingBottom="3dp"
                android:text="精品试听"
                android:textColor="#FF854306"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_course_typet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/tv_course_type"
                android:background="@drawable/bg_f7f7f7_rectangle"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="3dp"
                android:paddingRight="8dp"
                android:paddingBottom="3dp"
                android:text="精品试听"
                android:textColor="@color/color666666"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_course_look1"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_eye_look"
                android:drawablePadding="2.5dp"
                android:gravity="center"
                android:text="精品试听"
                android:textColor="@color/color_8B8B8D"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_toLeftOf="@+id/tv_name"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="263人在263人在263人在"
                android:textColor="#ffa8a8a8"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:text="普华智库"
                android:textColor="#ffa8a8a8"
                android:textSize="13sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="3天掌握10大考点考试…"
            android:textColor="#ff999999"
            android:textSize="14sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:background="@drawable/creat_time_icon" />

            <TextView
                android:id="@+id/tv_course_time"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="2.5dp"
                android:layout_marginRight="11dp"
                android:layout_toRightOf="@+id/iv_time"
                android:gravity="center"
                android:text="精品试听"
                android:textColor="@color/color_8B8B8D"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_course_look"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_eye_look"
                android:drawablePadding="2.5dp"
                android:gravity="center"
                android:text="精品试听"
                android:textColor="@color/color_8B8B8D"
                android:textSize="11sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>